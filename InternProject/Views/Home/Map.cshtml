@{
    ViewData["Title"] = "Harita İşlemleri";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@v9.2.4/dist/ol.css">

<style>
    .ol-attribution, .ol-attribution a {
        pointer-events: none !important;
    }

    .ol-control {
        pointer-events: auto;
        z-index: 1000;
    }

    .ol-viewport {
        pointer-events: auto;
    }
</style>

<div class="container mt-4">
    <h4>Harita İşlemleri</h4>

    <div class="row mb-3">
        <div class="col-md-3">
            <label for="mapType" class="form-label">Harita Tipi:</label>
            <select class="form-select" id="mapType">
                <option value="osm">Yol Haritası</option>
                <option value="satellite">Uydu</option>
                <option value="terrain">Arazi</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="drawType" class="form-label">Çizim Türü:</label>
            <select class="form-select" id="drawType">
                <option value="None">Yok</option>
                <option value="Point">Nokta</option>
                <option value="LineString">Çizgi</option>
                <option value="Polygon" selected>Poligon</option>
                <option value="Circle">Daire</option>
            </select>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-2">
            <button id="clearDrawings" class="btn btn-danger w-100">Tüm Çizimleri Temizle</button>
        </div>
        <div class="col-md-2">
            <button id="undoDrawing" class="btn btn-warning w-100">Son İşlemi Geri Al</button>
        </div>
        <div class="col-md-2">
            <button id="downloadDrawings" class="btn btn-success w-100">Çizimleri İndir</button>
        </div>
        <div class="col-md-2">
            <button id="saveDrawings" class="btn btn-primary w-100">Çizimleri Kaydet</button>
        </div>

    </div>

    <div class="row mb-2 mt-3">
        <div class="col-md-3">
            <label>Enlem (Lat):</label>
            <input type="text" id="lat" class="form-control" placeholder="örn: 39.925054">
        </div>
        <div class="col-md-3">
            <label>Boylam (Lon):</label>
            <input type="text" id="lon" class="form-control" placeholder="örn: 32.836943">
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button id="gotoCoord" class="btn btn-primary w-100">Git</button>
        </div>
    </div>

    <div class="row mb-2 mt-3">
        <div class="col-md-3">
            <label>Yer Adı (Geocode):</label>
            <input type="text" id="placeName" class="form-control" placeholder="örn: İstanbul">
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button id="gotoPlace" class="btn btn-info w-100">Yere Git</button>
        </div>
    </div>


    <div id="map" style="width: 100%; height: 500px; border: 1px solid #ccc; margin-top: 20px;"></div>
</div>

<script src="https://cdn.jsdelivr.net/npm/ol@v9.2.4/dist/ol.js"></script>
<script src="~/js/Map.js"></script>
